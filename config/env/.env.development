# =============================================================
# .env.development - Variáveis para Desenvolvimento Local
# =============================================================
# Copie para a raiz do projeto como .env para desenvolvimento
# =============================================================

# =========================================================
# BANCO DE DADOS (MySQL Local)
# =========================================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=sua_senha_local
DATABASE_NAME=intuitive_care_test

# =========================================================
# API
# =========================================================
API_DEBUG=true
ENVIRONMENT=development

# =========================================================
# SEGURANÇA / CORS
# =========================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =========================================================
# RATE LIMITING (mais permissivo em dev)
# =========================================================
RATE_LIMIT_PER_MINUTE=1000

# =========================================================
# LOGGING (mais detalhado em dev)
# =========================================================
LOG_LEVEL=DEBUG

# =========================================================
# PATHS
# =========================================================
DATA_DIR=./data
