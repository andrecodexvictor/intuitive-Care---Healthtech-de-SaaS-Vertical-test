# =============================================================
# .env.docker - Variáveis para Docker Compose
# =============================================================
# Este arquivo é usado automaticamente pelo docker-compose.yml
# Não precisa copiar para a raiz quando usando Docker
# =============================================================

# =========================================================
# BANCO DE DADOS (MySQL Container)
# =========================================================
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=intuitive_care_2024
DATABASE_NAME=intuitive_care_test

# =========================================================
# API
# =========================================================
API_DEBUG=false
ENVIRONMENT=production

# =========================================================
# SEGURANÇA / CORS
# =========================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# =========================================================
# RATE LIMITING
# =========================================================
RATE_LIMIT_PER_MINUTE=100

# =========================================================
# LOGGING
# =========================================================
LOG_LEVEL=INFO

# =========================================================
# PATHS (dentro do container)
# =========================================================
DATA_DIR=/app/data
